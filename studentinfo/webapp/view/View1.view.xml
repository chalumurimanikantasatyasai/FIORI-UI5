<mvc:View controllerName="org.inedxit.studentinfo.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <VBox>
          <Label text="Student ID"/>
          <Input id="stdId" value="{stdModel>/studentid}" width="10%"/>
          <Label text="Name"/>
          <Input id="stdName" value="{stdModel>/name}" width="10%"/>
          <Label text="Class"/>
          <Input id="stdcla" value="{stdModel>/class}" width="10%"/>
          <Label text="Section"/>
          <Input id="stdSec" value="{stdModel>/section}" width="10%"/>
          <Button text="{i18n>Getdet}" id="idBtnGD" press="onGetDetails" icon="sap-icon://approvals"/>
         </VBox>

    </Page>
</mvc:View>