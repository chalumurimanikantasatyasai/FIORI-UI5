<mvc:View controllerName="org.inedxit.studentinfo.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <VBox>
            <HBox alignItems="Center">
                <Label text="Student ID" width="100px"/>
                <Input id="stdId" value="{stdModel>/studentid}" width="200px"/>
            </HBox>
            <HBox alignItems="Center">
                <Label text="Name" width="100px"/>
                <Input id="stdName" value="{stdModel>/name}" width="200px"/>
            </HBox>
            <HBox alignItems="Center">
                <Label text="Class" width="100px"/>
                <Input id="stdcla" value="{stdModel>/class}" width="200px"/>
            </HBox>
            <HBox alignItems="Center">
                <Label text="Section" width="100px"/>
                <Input id="stdSec" value="{stdModel>/section}" width="200px"/>
            </HBox>
            <HBox>
                <Label width="80px"/>
                <Button text="{i18n>Getdet}" id="idBtnGD" press="onGetDetails" icon="sap-icon://approvals"/>
            </HBox>
        </VBox>


    </Page>
</mvc:View>