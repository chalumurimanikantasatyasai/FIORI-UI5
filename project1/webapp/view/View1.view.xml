<mvc:View controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>

            <VBox>

                <Input id="idVal1" placeholder="Enter Value1" width="15%" />

                <Input id="idVal2" placeholder="Enter Value2" width="15%" />

                  <HBox>

                    <Button text="{i18n>ADD}" id="idbtnadd" press="onOperation" icon="sap-icon://add" />
                    <Button text="{i18n>SUB}" id="idbtsub" press="onOperation" icon="sap-icon://less" />
                    <Button text="{i18n>MUL}" id="idbtnmul" press="onOperation" icon="sap-icon://decline" />
                    <Button text="{i18n>DIV}" id="idbtndiv" press="onOperation" icon="sap-icon://resize-corner" />

                   </HBox>
                
            </VBox>

        </content>
    </Page>
    
</mvc:View>